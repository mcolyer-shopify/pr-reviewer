{
  "permissions": {
    "allow": [
      "Bash(uv add:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(uv run ruff format:*)",
      "Bash(uv run ruff check:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash(git commit:*)",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/precommit.sh"
          }
        ]
      }
    ]
  }
}